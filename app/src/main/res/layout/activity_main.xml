<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jitianbo.baidusucks.MainActivity">

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/go_btn"
        android:layout_above="@+id/back_btn"
        android:layout_below="@+id/progressBar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/go_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/editText"-->
        <!--android:layout_alignBottom="@+id/go_btn"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_toStartOf="@+id/clear_btn" />-->
    <com.example.jitianbo.baidusucks.MyEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/go_btn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/go_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"

        android:id="@+id/back_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">>"
        android:id="@+id/forward_btn"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/back_btn" />
    <!--<Button-->
        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="X"-->
        <!--android:id="@+id/clear_btn"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toStartOf="@+id/go_btn" />-->

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/go_btn"
        android:layout_alignParentEnd="true"
        android:maxHeight="20dp"
        android:minHeight="10dp"
        />

</RelativeLayout>
