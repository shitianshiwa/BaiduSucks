<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jitianbo.baidusucks.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:fitsSystemWindows="true" >
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:id="@+id/go_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <com.example.jitianbo.baidusucks.MyEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignBottom="@+id/go_btn"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/go_btn" />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/go_btn"
            android:layout_alignParentEnd="true"

            />
    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:id="@+id/webView"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_gravity="center_horizontal|bottom">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;&lt;"

            android:id="@+id/back_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>"
            android:id="@+id/forward_btn"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/back_btn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/xiangxi_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书签"
            android:id="@+id/shuqian_btn"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/zhuye_btn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:id="@+id/zhuye_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:id="@+id/shezhi_btn"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/shuqian_btn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"
            android:id="@+id/shuaxin_btn"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/back_btn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加书签"
            android:id="@+id/tianjiashuqian_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/shezhi_btn" />

    </RelativeLayout>
</FrameLayout>
